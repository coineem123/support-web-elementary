{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["airbnb-base"],
	"globals": {
		"dhx": "readonly",
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			}
		],
		"quotes": ["error", "double"],
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1,
				"ignoredNodes": ["ConditionalExpression"]
			}
		],
		"semi": ["error", "always"],
		"class-methods-use-this": "off",
		"no-plusplus": "off",
		"no-underscore-dangle": "off",
		"comma-dangle": "off",
		"arrow-parens": "off",
		"object-curly-newline": "off",
		"implicit-arrow-linebreak": "off",
		"operator-linebreak": "off",
		"no-param-reassign": "off"
	}
}
